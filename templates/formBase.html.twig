{% extends 'base.html.twig' %}

{% block title %}
	Cr√©er un nouvel utilisateur
{% endblock %}

{% block body %}
	<style>
		form {
			margin: 1em auto;
			max-width: 400px;
			width: 95%;
			display: flex;
			flex-direction: column;
			align-items: end;
			justify-content: center;
			gap: 1rem;
		}

		form > div {
			width: 100%;
			display: flex;
			flex-direction: column;
			gap: 1rem;
		}

		form > div > ul:first-child {
			width: 100%;
			display: flex;
			flex-direction: column;
			align-items: start;
			justify-content: center;
			gap: 0.25rem;
			list-style: disc;
			color: #E63B3B
		}

		form > div > div {
			width: 100%;
			display: flex;
			flex-direction: column;
			gap: 0.25rem;
		}

		form > div > div > label {
			font-weight: bold;
		}
	</style>


	<h1>
		{% block pageTitle %}
			Title
		{% endblock %}
	</h1>

	{{ form_start(form) }}
	{{ form_widget(form) }}


	<button type="submit">Enregistrer</button>
	{{ form_end(form) }}
{% endblock %}

